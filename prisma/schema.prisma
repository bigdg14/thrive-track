// Fitness Tracker - Prisma Schema
// Phase 1: Core Workout Tracking

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USER & AUTHENTICATION
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Fitness profile
  fitnessLevel   String?   // beginner, intermediate, advanced
  primaryGoals   String[]  // weight_loss, muscle_gain, strength, endurance, general_fitness
  height         Float?    // in cm
  weight         Float?    // in kg
  age            Int?
  gender         String?   // male, female, other, prefer_not_to_say
  activityLevel  String?   // sedentary, lightly_active, active, very_active

  // Preferences
  unitsPreference String   @default("metric") // metric, imperial
  notificationSettings Json @default("{}")

  // Relations
  accounts              Account[]
  sessions              Session[]
  workouts              Workout[]
  personalRecords       PersonalRecord[]
  favoriteExercises     FavoriteExercise[]

  // Phase 2 Relations
  goals                 Goal[]
  bodyMeasurements      BodyMeasurement[]
  progressPhotos        ProgressPhoto[]
  nutritionTarget       NutritionTarget?
  nutritionLogs         NutritionLog[]
  favoriteFoods         FavoriteFood[]
  userPrograms          UserProgram[]

  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// EXERCISE DATABASE
// ============================================

model Exercise {
  id               String   @id @default(cuid())
  name             String
  description      String?  @db.Text
  muscleGroups     String[] // chest, back, legs, shoulders, arms, core, full_body
  secondaryMuscles String[] // secondary muscle groups
  equipment        String[] // barbell, dumbbell, machine, bodyweight, cable, etc.
  difficulty       String   // beginner, intermediate, advanced
  exerciseType     String   // strength, cardio, flexibility, plyometric
  gifUrl           String?  // URL to animated GIF demonstration
  instructions     Json?    // Step-by-step instructions array
  tips             Json?    // Tips and common mistakes array
  alternatives     String[] // IDs of alternative exercises
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  workoutExercises  WorkoutExercise[]
  personalRecords   PersonalRecord[]
  favoriteExercises FavoriteExercise[]

  @@index([exerciseType])
  @@index([difficulty])
}

model FavoriteExercise {
  id         String   @id @default(cuid())
  userId     String
  exerciseId String
  createdAt  DateTime @default(now())

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  exercise Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)

  @@unique([userId, exerciseId])
  @@index([userId])
}

// ============================================
// WORKOUTS
// ============================================

model Workout {
  id              String    @id @default(cuid())
  userId          String
  startedAt       DateTime
  endedAt         DateTime?
  duration        Int?      // Duration in minutes
  notes           String?   @db.Text
  difficultyRating Int?     // 1-5 rating
  totalVolume     Float?    // Total weight lifted (kg or lbs)
  workoutType     String?   // strength, cardio, mixed, etc.
  programId       String?   // Optional: if workout is from a program
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  workoutExercises WorkoutExercise[]

  @@index([userId])
  @@index([startedAt])
  @@index([programId])
}

model WorkoutExercise {
  id         String   @id @default(cuid())
  workoutId  String
  exerciseId String
  order      Int      // Order of exercise in workout
  notes      String?  @db.Text
  createdAt  DateTime @default(now())

  // Relations
  workout      Workout       @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  exercise     Exercise      @relation(fields: [exerciseId], references: [id], onDelete: Cascade)
  workoutSets  WorkoutSet[]

  @@index([workoutId])
  @@index([exerciseId])
}

model WorkoutSet {
  id                String    @id @default(cuid())
  workoutExerciseId String
  setNumber         Int       // Set number (1, 2, 3, etc.)
  reps              Int?      // Number of repetitions
  weight            Float?    // Weight in kg or lbs
  duration          Int?      // Duration in seconds (for cardio/timed exercises)
  distance          Float?    // Distance in meters/km (for cardio)
  restTime          Int?      // Rest time after set in seconds
  completedAt       DateTime?
  notes             String?
  createdAt         DateTime  @default(now())

  // Relations
  workoutExercise WorkoutExercise @relation(fields: [workoutExerciseId], references: [id], onDelete: Cascade)

  @@index([workoutExerciseId])
}

// ============================================
// PERSONAL RECORDS
// ============================================

model PersonalRecord {
  id          String   @id @default(cuid())
  userId      String
  exerciseId  String
  recordType  String   // max_weight, max_reps, best_time, longest_distance, etc.
  value       Float    // The record value
  metadata    Json?    // Additional data (reps at that weight, etc.)
  achievedAt  DateTime
  createdAt   DateTime @default(now())

  // Relations
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  exercise Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([exerciseId])
  @@index([achievedAt])
}

// ============================================
// PHASE 2: GOALS
// ============================================

model Goal {
  id            String    @id @default(cuid())
  userId        String
  goalType      String    // weight, strength, consistency, body_composition
  title         String
  description   String?   @db.Text
  targetValue   Float
  currentValue  Float?
  unit          String?   // kg, lbs, %, workouts, etc.
  deadline      DateTime?
  status        String    @default("active") // active, achieved, abandoned
  exerciseId    String?   // For strength goals (optional reference)
  achievedAt    DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([goalType])
}

// ============================================
// PHASE 2: BODY MEASUREMENTS
// ============================================

model BodyMeasurement {
  id               String   @id @default(cuid())
  userId           String
  date             DateTime
  weight           Float?   // in kg
  bodyFatPercent   Float?
  chest            Float?   // in cm
  waist            Float?
  hips             Float?
  biceps           Float?   // bicep measurement
  thighs           Float?
  calves           Float?
  shoulders        Float?
  neck             Float?
  notes            String?  @db.Text
  createdAt        DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([date])
}

model ProgressPhoto {
  id        String   @id @default(cuid())
  userId    String
  photoUrl  String   // URL to stored image
  poseType  String   // front, side, back
  takenAt   DateTime
  notes     String?  @db.Text
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([takenAt])
}

// ============================================
// PHASE 2: NUTRITION TRACKING
// ============================================

model NutritionTarget {
  id            String   @id @default(cuid())
  userId        String   @unique
  dailyCalories Int
  proteinTarget Float    // in grams
  carbsTarget   Float    // in grams
  fatTarget     Float    // in grams
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model NutritionLog {
  id           String   @id @default(cuid())
  userId       String
  date         DateTime
  mealType     String   // breakfast, lunch, dinner, snack
  foodName     String
  servingSize  String?
  calories     Int
  protein      Float    // in grams
  carbs        Float    // in grams
  fat          Float    // in grams
  notes        String?  @db.Text
  photoUrl     String?  // Optional meal photo
  createdAt    DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([date])
}

model FavoriteFood {
  id          String   @id @default(cuid())
  userId      String
  foodName    String
  servingSize String
  calories    Int
  protein     Float
  carbs       Float
  fat         Float
  createdAt   DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// ============================================
// PHASE 2: WORKOUT PROGRAMS
// ============================================

model WorkoutProgram {
  id             String   @id @default(cuid())
  name           String
  description    String?  @db.Text
  difficulty     String   // beginner, intermediate, advanced
  durationWeeks  Int
  isSystemProgram Boolean @default(false) // true for pre-built programs
  createdBy      String?  // userId for custom programs, null for system
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  programWorkouts ProgramWorkout[]
  userPrograms    UserProgram[]

  @@index([difficulty])
  @@index([isSystemProgram])
}

model ProgramWorkout {
  id          String   @id @default(cuid())
  programId   String
  dayNumber   Int      // 1-7 (day of week or cycle day)
  workoutName String
  exercises   Json     // Array of {exerciseId, sets, reps, weight?, notes?}
  createdAt   DateTime @default(now())

  // Relations
  program WorkoutProgram @relation(fields: [programId], references: [id], onDelete: Cascade)

  @@index([programId])
}

model UserProgram {
  id            String    @id @default(cuid())
  userId        String
  programId     String
  startedAt     DateTime
  currentWeek   Int       @default(1)
  currentDay    Int       @default(1)
  completedAt   DateTime?
  status        String    @default("active") // active, completed, paused
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  user    User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  program WorkoutProgram @relation(fields: [programId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}
